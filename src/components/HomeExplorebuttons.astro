---
import "../css/style.css";
const {text, href_text} = Astro.props
---
<a href={href_text}> {text} </a>

<style>

a{
    color:var(--font_color);
    background-color: var(--button_red);
    padding:22px 22px;
    font-size: 14px;
    cursor: pointer;
    border-radius: 5px;
    border:none;
}

a:hover{
    color:var(--font_color);
    background-color: var(--background_color);
    border:2px solid var(--button_red);
    padding:20px 20px;
}

@media screen and (min-width: 1000px){
    a{
        padding:26px 26px;
        font-size: 16px;
    }

    a:hover{
        padding:24px 24px;
        font-size: 16px;
    }
}