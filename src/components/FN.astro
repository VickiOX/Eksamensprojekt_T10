---
const {img, text} = Astro.props;
---
<div class="grid_1-1">
<img src={img}>
<p>{text}</p>
</div>

<style>
    .grid_1-1 {
        display: flex;
        justify-content: center;
    }

    img{
        width: 120px;
        height: 120px;
        margin-left: 10px;
        margin-right: 20px;
        margin:10px 10px;
    }

    p{
     max-width: 260px;
     padding-top: 14px;
     margin-right:10px;
    }
    
    @media (min-width: 1000px){
    .grid_1-1 {
        margin: 40px 0;
    }
    img{
        width: 180px;
        height: 180px;
        margin: 30px;
        margin-left:90px;
    }


    p{
     max-width: 500px;
  
    }
    }
</style>